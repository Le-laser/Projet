int iTabTrame[LONGTRAME];
int iLED= 2; //Pour IHM car l'UART est pris pour la com donc connexion PC impossible

//Structures


//Prototypes
//void receiveEvent(int);
void Reception(int);
void Blink(int, int);


///////////////   Setup   ///////////////
void setup() {
  Serial.begin(9600); //Liaison série
  pinMode(iLED, OUTPUT);
  digitalWrite(iLED, LOW);
  Blink(5, 400);
  delay(1000);
}


